package ex01_account;

import java.util.Scanner;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

import ex01_account.vo.AccountVO;

public class AccountController {
	public void menu() {
		Scanner scan = new Scanner(System.in);
		
		System.out.println("[은행업무 프로그램]");
		System.out.println("1. 계좌 개설   2: 입금   3: 출금   4: 계좌조회   5: 송금   -1: 종료");
		System.out.print("원하는 번호를 입력해주세요: ");
		int num = scan.nextInt();
		select(num);
	}
	
	public void select(int num) {
		Scanner scan = new Scanner(System.in);
		AccountVO account = new AccountVO();
		ApplicationContext context = new ClassPathXmlApplicationContext("ex01_account/applicationContext.xml");
		AccountService svc = context.getBean("")
		
		switch(num) {
		case 1:
			System.out.print("이름 입력: ");
			String name = scan.nextLine();
			account.setName(name);
			
			System.out.print("금액 입력: ");
			int amount = scan.nextInt();
			account.setAmount(amount);
			
			System.out.print("암호 입력: ");
			String password = scan.nextLine();
			account.setPassword(password);
			
			
			
			System.out.println("계좌 계설이 완료되었습니다.");
			break;
		case 2:
			System.out.print("계좌번호 입력: ");
			int accountNum = scan.nextLine();
			account.setAccountNum(accountNum);;
			
			System.out.print("암호 입력: ");
			String password = scan.nextLine();
			account.setPassword(password);
			
			System.out.print("금액 입력: ");
			int amount = scan.nextInt();
			account.setAmount(amount);
			
			break;
		case 3:
			break;
		case 4:
			break;
		case -1:
			break;
		default:
			System.out.println("번호를 다시 입력해주세요");
			break;
		}
	}
	
	
}
